<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dragosneagu.emojinutrition.StartActivity">

    <TextView
        android:text="@string/intro_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/introTextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/avatarChoiceF"
        android:layout_below="@+id/introTextView"
        android:layout_alignParentStart="true"
        android:text="@string/intro_m" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/avatarChoiceM"
        android:text="@string/intro_f"
        android:layout_alignBaseline="@+id/avatarChoiceF"
        android:layout_alignBottom="@+id/avatarChoiceF"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/intro_your_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avatarChoiceF"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp"
        android:id="@+id/nameTextView" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/playerNameText"
        android:layout_below="@+id/nameTextView"
        android:layout_alignParentStart="true"
        android:hint="@string/intro_name"
        android:maxLines="1" />

    <TextView
        android:text="@string/intro_your_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ageTextView"
        android:layout_below="@+id/playerNameText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:layout_below="@+id/ageTextView"
        android:layout_alignParentStart="true"
        android:id="@+id/playerAgeText"
        android:hint="@string/intro_age"
        android:maxLines="1" />

    <Button
        android:text="@string/intro_finish_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saveButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
